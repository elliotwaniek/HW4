<h1 class="mb-4">Places</h1>

<% if @places.any? %>
  <div class="mb-4">
    <% @places.each do |place| %>
      <div class="mb-2">
        <%= link_to place.name, place_path(place), class: "text-primary text-decoration-underline fs-5" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted mb-4">No places added yet.</p>
<% end %>

<%= link_to "New place", new_place_path, class: "btn btn-dark" %>