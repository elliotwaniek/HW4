<div class="row">
  <div class="col-md-6">
    <h1 class="mb-4">New Place</h1>

    <%= form_with url: places_path, method: :post, class: "mb-3" do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>

      <%= form.submit "Save", class: "btn btn-dark" %>
    <% end %>

    <%= link_to "Back to Place", places_path, class: "text-primary text-decoration-underline" %>
  </div>
</div>