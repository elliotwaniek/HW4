<!DOCTYPE html>
<html>
<head>
  <title>Travel Log</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light px-2">
    <a class="navbar-brand" href="<%= root_path %>">Travel Log</a>
    <div>
      <ul class="navbar-nav ml-auto flex-row gap-2">
        <% if current_user %>
          <li class="nav-item"><%= link_to "Places", places_path, class: "nav-link" %></li>
          <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-danger" %>
        <% else %>
          <li class="nav-item"><%= link_to "Sign Up", new_user_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  <div class="container mt-4">
    <%= yield %>
  </div>
</body>
</html>